@inherits LayoutComponentBase

<MudThemeProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Class="my-bg-white my-border my-border-buttom">
        <MudButton Variant="Variant.Outlined" Class="my-border" Size="Size.Small" Color="Color.Dark" IconColor="Color.Dark" StartIcon="@Icons.Material.Filled.Menu" OnClick="@((e) => DrawerToggle())">Меню</MudButton>
        <MudSpacer />
    </MudAppBar>
    <MudDrawer @bind-Open="_drawerOpen" Elevation="0">
        <MudDrawerHeader Class="my-border my-border-buttom">
            <MudText Typo="Typo.h6">LightTest</MudText>
        </MudDrawerHeader>
        <NavMenu />
    </MudDrawer>
    <MudMainContent>
        @Body
    </MudMainContent>
</MudLayout>

@code {
    bool _drawerOpen = false;
    private MudTheme Theme = new MudTheme();

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }
}